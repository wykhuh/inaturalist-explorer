{
  "name": "inaturalist_explorer",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && rsync -R ./src/components/**/template.html ./dist",
    "preview": "vite preview",
    "test_watch": "vitest",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e_record": "playwright codegen",
    "type": "tsc",
    "format": "prettier --write ./src",
    "cleanup": "npm run type & npm run format",
    "ci": "npm run type & npm run format & npm run test ",
    "build-ghpages": "vite build --base=/inaturalist-explorer/ && rsync -R ./src/components/**/template.html ./dist",
    "preview-ghpages": "vite preview --base=/inaturalist-explorer/"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bramus__pagination-sequence": "^1.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@bramus/pagination-sequence": "^1.2.1",
    "@tarekraafat/autocomplete.js": "^10.2.9",
    "leaflet": "^1.9.4"
  }
}
